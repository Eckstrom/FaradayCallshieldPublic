<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/transaction_cardView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp"
        app:cardElevation="5dp"
        app:contentPadding="2dp"
        app:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        />

    <TextView
        android:id="@+id/item_blacklist_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:paddingLeft="12dp"
        android:layout_centerVertical="true"
        android:text="Test"/>

    <TextView
        android:id="@+id/entryTitle"
        android:maxWidth="235dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingTop="17dp"
        android:paddingStart="50dp"
        android:paddingLeft="50dp"
        android:paddingEnd="35dp"
        android:elevation="10dp"
        tools:text="Test"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/entryDescriptor"
        android:maxWidth="250dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/entryTitle"
        android:gravity="center_vertical"
        android:paddingStart="53dp"
        android:paddingLeft="53dp"
        android:elevation="10dp"
        android:paddingEnd="30dp"
        tools:text="Test"
        android:textColor="@color/gray"
        android:textSize="13sp"
        android:ellipsize="end"
        android:singleLine="true"
        />

    <Switch
        android:id="@+id/block_call_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:elevation="10dp"
        android:paddingEnd="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:hint="Reject "
        />

    <Switch
        android:id="@+id/block_text_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:elevation="10dp"
        android:paddingEnd="10dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:hint="SMS"
        android:layout_toLeftOf="@+id/block_call_switch"
        android:layout_toStartOf="@+id/block_call_switch"
        />

</RelativeLayout>